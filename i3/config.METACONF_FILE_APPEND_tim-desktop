# Screen brightness controls
bindsym $mod+KP_Add exec "sudo ddcutil setvcp 10 + 10 -b 12 && sudo ddcutil setvcp 10 + 10 -b 5"
bindsym $mod+KP_Subtract exec "sudo ddcutil setvcp 10 - 10 -b 12&& sudo ddcutil setvcp 10 - 10 -b 5"
bindsym $mod+Shift+KP_Add exec "sudo $HOME/.config/i3/scripts/display-update-daytime.sh"
bindsym $mod+Shift+KP_Subtract exec "sudo $HOME/.config/i3/scripts/display-update-nighttime.sh"
bindsym $mod+Shift+KP_Multiply exec "sudo $HOME/.config/i3/scripts/display-update-medium.sh"

# Chain the following commands: Start locked, display setup, background, bars, start plank after
exec_always --no-startup-id $HOME/.config/i3/scripts/setup-disp_backg_bar.sh

# Start locked; start plank after
exec $HOME/.config/i3/scripts/lock.sh -l

