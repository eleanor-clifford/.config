# Mappings {{{
bind index,pager  E sidebar-next
bind index,pager  I sidebar-prev
bind index,pager  O sidebar-open

bind index        e  next-entry
bind index        i  previous-entry
bind index        o  display-message
bind index        j  search-next
bind index        J  search-opposite
bind index        g  first-entry
bind index        G  last-entry

bind browser      n  exit
bind browser      e  next-entry
bind browser      i  previous-entry
bind browser      o  select-entry
bind browser      j  search-next
bind browser      J  search-opposite

bind pager        n  exit
bind pager        e  next-line
bind pager        i  previous-line
bind pager        o  view-attachments
bind pager        j  search-next
bind pager        J  search-opposite
bind pager        g  top
bind pager        G  bottom


bind attach       n  exit
bind attach       e  next-entry
bind attach       i  previous-entry
bind attach       o  view-attach
bind attach       j  search-next
bind attach       J  search-opposite

#bind browser n goto-parent
#bind pager,browser gg top-page
#bind pager,browser G bottom-page
# }}}
# Macros {{{
macro index,pager \cb "|urlview\n"
macro index,pager v   "|vim -\n"
macro index,pager V   "|cat /dev/stdin > /tmp/mutt-vimexternal; kitty vim +'set ft=mail' /tmp/mutt-vimexternal &\n"
macro attach      w   "|cat /dev/stdin > /tmp/mutt-w3m.html; w3m -cols 80 /tmp/mutt-w3m.html\n"
# }}}
# Sidebar {{{
set sidebar_visible
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
set mail_check_stats
# }}}
# Pager {{{
# I want to preserve wrapping done on a 78/80 basis even with > indenting
set wrap = 90

# view
auto_view text/html                                      # view html automatically
alternative_order text/plain text/enriched text/html     # save html for last

# }}}
# Editor {{{
# Delete fields I don't want in vim
set editor          = vim
set edit_headers    = yes
set autoedit        = yes
# }}}
# IMAP {{{
set folder       = imaps://outlook.office365.com:993/
set imap_user    = tc565@cam.ac.uk
set imap_pass    = `$HOME/.config/scripts/get_password.sh cam.ac.uk`
set spoolfile    = +INBOX
mailboxes        = +INBOX +'Sent Items' +Archive

# Store message headers locally to speed things up.
# If hcache is a folder, Mutt will create sub cache folders for each account
# which may speeds things up even more.
set header_cache = ~/.cache/neomutt/headers

# Store messages locally to speed things up, like searching message bodies.
# Can be the same folder as header_cache.
# This will cost important disk usage according to your e-mail amount.
set message_cachedir = ~/.cache/neomutt/messages

# Allow Mutt to open a new IMAP connection automatically.
unset imap_passive

# Keep the IMAP connection alive by polling intermittently (time in seconds).
set imap_keepalive = 300

# How often to check for new mail (time in seconds).
set mail_check = 60
# }}}
# SMTP {{{
set realname        = 'Tim Clifford'
set from            = tc565@cam.ac.uk
set use_from        = yes
unset record

set smtp_url        = smtp://tc565@cam.ac.uk@smtp.office365.com:587
set smtp_pass       = $imap_pass
set ssl_starttls    = yes

# }}}
